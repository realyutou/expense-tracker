<div class="row align-items-center mx-auto w-50 mt-5">
  <div class="text-center mx-auto mb-2">
    {{> message}}
  </div>
  <div class="col-auto">
    <p>*為必填</p>
  </div>
  <div class="col-auto mx-auto w-75">
    <h2 class="text-center">修改你的支出</h2>
  </div>
</div>
<form action="/records/{{ recordId }}?_method=PUT" method="POST" class="w-50 mx-auto mt-4">
  <div class="row align-items-center mb-3">
    <div class="col-auto">
      <label for="name" class="col-form-label fs-3">*名稱：</label>
    </div>
    <div class="col-auto mx-auto w-75">
      <input type="text" id="name" name="name" class="form-control" value="{{ record.name }}">
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-auto">
      <label for="date" class="col-form-label fs-3">*日期：</label>
    </div>
    <div class="col-auto mx-auto w-75">
      <input type="date" id="date" name="date" class="form-control" value="{{ date }}">
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-auto">
      <label for="category" class="col-form-label fs-3">*類別：</label>
    </div>
    <div class="col-auto mx-auto w-75">
      <select class="form-select" id="category" name="category">
        <option value="{{ record.category }}" selected>{{ record.category }}</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
  </div>
  <div class="row align-items-center mb-3">
    <div class="col-auto">
      <label for="amount" class="col-form-label fs-3">*金額：</label>
    </div>
    <div class="col-auto mx-auto w-75">
      <input type="number" id="amount" name="amount" class="form-control" value="{{ record.amount }}" min="0">
    </div>
  </div>
  <button type="submit" class="btn btn-outline-primary btn-lg w-100">送出</button>
</form>